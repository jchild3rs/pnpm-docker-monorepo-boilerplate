{
  "name": "pnpm-docker-monorepo-boilerplate",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check": "turbo run check",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "packageManager": "pnpm@7.3.0",
  "engines": {
    "pnpm": "^7.0.0",
    "node": "16.14.2"
  },
  "devDependencies": {
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "turbo": "latest"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "printWidth": 65
  }
}
