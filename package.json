{
  "name": "pnpm-docker-monorepo-boilerplate",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "docker": "DOCKER_BUILDKIT=1 turbo run docker --output-logs=new-only --cache-dir=.turbo",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "ci": "turbo run lint test build --output-logs=new-only --cache-dir=.turbo",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@6.32.9",
  "devDependencies": {
    "rimraf": "^3.0.2",
    "turbo": "latest"
  }
}
