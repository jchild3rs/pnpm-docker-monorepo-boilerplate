{
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "docker:build": {
      "dependsOn": ["^build", "$BRANCH_TAG"],
      "outputs": []
    },
    "docker:push": {
      "dependsOn": ["^docker:build", "$BRANCH_TAG"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
		"test": {
			"dependsOn": ["$CI", "$TURBO_CACHE_KEY"],
			"outputs": []
		}
  },
  "baseBranch": "origin/main",
	"globalDependencies": [".eslintrc.json", ".prettierrc", "tsconfig.json"]
}
